{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@quantumdeal/bot": [
        "libs/bot/src"
      ],
      "@quantumdeal/bot/*": [
        "libs/bot/src/*"
      ],
      "@quantumdeal/db": [
        "libs/db/src"
      ],
      "@quantumdeal/db/*": [
        "libs/db/src/*"
      ],
      "@quantumdeal/framework": [
        "libs/framework/src"
      ],
      "@quantumdeal/framework/*": [
        "libs/framework/src/*"
      ],
      "@quantumdeal/masterbot": [
        "libs/masterbot/src"
      ],
      "@quantumdeal/masterbot/*": [
        "libs/masterbot/src/*"
      ]
    }
  }
}